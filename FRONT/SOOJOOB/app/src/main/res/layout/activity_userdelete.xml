<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayBG"
    android:orientation="vertical"
    android:padding="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/nav_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginVertical="15dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/back_userupdate"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_left" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="회원 탈퇴"
                android:textColor="@color/greenTxt"
                android:textSize="36sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:text="회원 탈퇴 전 확인해 주세요!"
                android:textColor="@color/grayTxt"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="10dp"
                android:text="- 서비스 회원 탈퇴 후 회원정보 및 이용 기록은 모두 삭제되며, 다시 복구할 수 없습니다."
                android:textColor="@color/grayTxt"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:textColor="@color/grayTxt"
                android:textSize="14sp"
                android:text="- 활동 기록이나 데이터는 모두 삭제되며 재가입을 해도 복구되지 않습니다." />


            <CheckBox
                android:id="@+id/cb_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:text="회원 탈퇴 안내 동의 및 탈퇴를 신청합니다."
                android:textSize="16sp"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <android.widget.Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/round_wbutton"
                    android:layout_weight="1"
                    android:text="취소"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

                <android.widget.Button
                    android:id="@+id/btn_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/round_wbutton"
                    android:backgroundTint="@color/green"
                    android:layout_weight="1"
                    android:text="회원 탈퇴"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>