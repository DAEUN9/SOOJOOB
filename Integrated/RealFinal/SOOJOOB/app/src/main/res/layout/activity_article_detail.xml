<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/community_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/grayBG">

    <RelativeLayout
        android:id="@+id/nav_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/back_community_detail"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="상세 정보"
            android:textColor="@color/greenTxt"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="35dp"
        android:text="동락공원에서 수줍 하실 분!"
        android:textColor="@color/greenTxt"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/round_image"
        android:src="@drawable/ic_park"
        android:scaleType="centerCrop"
        android:clipToOutline="true"
        android:clickable="true"/>

    <TextView
        android:id="@+id/contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="20dp"
        android:text="오전 10시부터 1시간정도 할 사람 구합니다!!"
        android:textSize="20sp"
        android:textColor="@color/greenTxt"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="35dp"
        android:gravity="end"
        android:orientation="vertical">

        <TextView
            android:id="@+id/createdDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2022.08.15"
            android:textSize="20sp"
            android:textColor="@color/greenTxt"/>

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="GUEST"
            android:textSize="20sp"
            android:textColor="@color/greenTxt"
            android:textStyle="bold"/>

    </LinearLayout>

    <android.widget.Button
        android:id="@+id/backtolist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:background="@drawable/round_bluebutton"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:layout_marginHorizontal="35dp"
        android:text="목록으로"/>

</LinearLayout>
