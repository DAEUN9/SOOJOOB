<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="현재 시간 : "
        android:textColor="@color/green"
        android:textSize="30dp"
        android:textStyle="bold"
        android:paddingVertical="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.431"
        tools:layout_editor_absoluteX="29dp">
    </TextView>

    <ImageView
        android:id="@+id/iv_pre"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@+id/now"
        tools:layout_editor_absoluteX="-4dp"
        tools:srcCompat="@tools:sample/avatars"
        />

    <LinearLayout
        android:id="@+id/textLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_pre"
        android:paddingVertical="20dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="30dp"
            >

            <TextView
                android:id="@+id/TimeRecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="총 시간 "
                android:textSize="35dp"
                android:textStyle="bold"
                android:layout_weight="2"
                android:textAlignment="center"
                app:layout_constraintVertical_bias="0.431"
                tools:layout_editor_absoluteX="29dp">

            </TextView>
            <TextView
                android:id="@+id/sumDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이동거리 "
                android:textSize="35dp"
                android:textStyle="bold"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.431"
                android:layout_weight="2"

                tools:layout_editor_absoluteX="29dp"/>


        </LinearLayout>

        <TextView
            android:id="@+id/trashCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="쓰레기 개수"
            android:textSize="30dp"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="29dp"/>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textLayout"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btn_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="카메라"
            android:layout_marginHorizontal="20dp"
            tools:layout_editor_absoluteX="180dp"
            />

        <Button
            android:id="@+id/imageSaveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="이미지 저장"
            android:layout_weight="1"
            app:layout_constraintVertical_bias="0.496" />




    </LinearLayout>
    <Button
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/buttonLayout"
        android:text="플로깅 데이터 전달"
        android:layout_marginHorizontal="20dp"
        android:paddingHorizontal="30dp"
        app:layout_constraintVertical_bias="0.496" />


</androidx.constraintlayout.widget.ConstraintLayout>