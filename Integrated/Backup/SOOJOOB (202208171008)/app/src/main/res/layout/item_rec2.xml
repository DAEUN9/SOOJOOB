<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    android:padding="10dp"
    android:elevation="0.5dp"
    android:orientation="horizontal"
    android:background="@drawable/round">



    <ImageView
        android:id="@+id/image"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:background="@drawable/round_image"
        android:src="@drawable/clean01"
        android:scaleType="centerCrop"
        android:clipToOutline="true"
        android:clickable="true"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2022.07.13 15:23"
            android:textColor="@color/greenDark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/distance_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="거리 "
            android:textSize="18sp"
            android:textColor="@color/greenTxt"
            android:layout_below="@+id/date"/>

        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/distance_text"
            android:layout_below="@+id/date"
            android:layout_marginLeft="5dp"
            android:text="3.21"
            android:textColor="@color/greenTxt"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/recTime_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간 "
            android:textSize="18sp"
            android:textColor="@color/greenTxt"
            android:layout_below="@+id/distance_text"/>

        <TextView
            android:id="@+id/recTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/distance"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/recTime_text"
            android:text="7 분 20 초"
            android:textColor="@color/greenTxt"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/trashCnt_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="개수 "
            android:textSize="18sp"
            android:textColor="@color/greenTxt"
            android:layout_below="@+id/recTime_text"/>


        <TextView
            android:id="@+id/trashCnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="13"
            android:textSize="18sp"
            android:textColor="@color/greenTxt"
            android:layout_toRightOf="@+id/trashCnt_text"
            android:layout_below="@+id/recTime"/>

    </RelativeLayout>

</LinearLayout>