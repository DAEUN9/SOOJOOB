<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/grayBG"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/nav_nobadge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="35dp"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/back_community"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="수줍생활 글쓰기"
            android:textColor="@color/greenTxt"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/uploadImageBtn"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="25dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_camera">
    </ImageView>

    <EditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:hint="글 제목"
        android:backgroundTint="#3669CF"
        android:textSize="24sp"/>

    <EditText
        android:id="@+id/contents"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:gravity="top"
        android:hint="게시글 내용을 작성해주세요."
        android:backgroundTint="#3669CF"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="10dp">

        <android.widget.Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/round_wbutton"
            android:text="취소"
            android:textColor="@color/whiteTxt"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_weight="1"/>

        <android.widget.Button
            android:id="@+id/btnWrite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/round_bluebutton"
            android:text="등록"
            android:textColor="@color/whiteTxt"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>
