<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".RankActivity"
    android:layout_marginStart="17dp"
    android:layout_marginEnd="17dp"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/nav_rank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginVertical="35dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/back_rank"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_left" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="수줍 어워즈"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@drawable/podium"
        android:layout_margin="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/rank_num"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="순위"
            android:textColor="@color/green"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="left"/>

        <TextView
            android:id="@+id/username"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="닉네임"
            android:textColor="@color/green"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"/>




        <TextView
            android:id="@+id/exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/distance"
            android:layout_toRightOf="@+id/recTime_text"
            android:text="온도"
            android:layout_marginEnd="10dp"
            android:textColor="@color/green"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:src="@drawable/underline_green"

        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rank_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        tools:listitem="@layout/item_rank" />

</LinearLayout>