<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/community_article"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:padding="20dp"
    android:elevation="1dp"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/round">

    <ImageView
        android:id="@+id/image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/round_image"
        android:src="@drawable/clean02"
        android:scaleType="centerCrop"
        android:clipToOutline="true"
        android:clickable="true"/>


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="동락공원에서 수줍 하실 분!"
            android:textColor="@color/greenTxt"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/createdDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="2022.08.15"
            android:textSize="21sp"
            android:textColor="@color/greenTxt"/>

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="GUEST"
            android:textSize="20sp"
            android:textColor="@color/greenTxt"/>

        <TextView
            android:id="@+id/contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="오전 10시부터 1시간정도 할 사람 구합니다!!"
            android:textSize="20sp"
            android:textColor="@color/greenTxt"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_wbutton"
            android:textStyle="bold"
            android:textSize="24sp"
            android:id="@+id/backtolist"
            android:layout_marginHorizontal="10dp"
            android:text="목록으로"
            />
    </LinearLayout>


</LinearLayout>
