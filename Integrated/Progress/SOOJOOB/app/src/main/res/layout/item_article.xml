<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    android:padding="10dp"
    android:elevation="0.5dp"
    android:orientation="horizontal"
    android:background="@drawable/round">



    <ImageView
        android:id="@+id/image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/round_image"
        android:src="@drawable/clean01"
        android:scaleType="centerCrop"
        android:clipToOutline="true"
        android:clickable="true"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="동락공원에서 수줍 하실 분!"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/contents_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내용 "
            android:textSize="18sp"
            android:textColor="@color/greenTxt"
            android:layout_below="@+id/title"/>

        <TextView
            android:id="@+id/contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/contents_text"
            android:layout_below="@+id/title"
            android:layout_marginLeft="5dp"
            android:text="수줍해요!"
            android:textColor="@color/greenTxt"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/recTime_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간 "
            android:textSize="18sp"
            android:textColor="@color/greenTxt"
            android:layout_below="@+id/contents_text"/>

        <TextView
            android:id="@+id/createdDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contents"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/recTime_text"
            android:text="2022.08.15"
            android:textColor="@color/greenTxt"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/createdDate"
            android:layout_marginTop="0dp"
            android:text="이름"
            android:textSize="15sp">
        </TextView>

    </RelativeLayout>

</LinearLayout>