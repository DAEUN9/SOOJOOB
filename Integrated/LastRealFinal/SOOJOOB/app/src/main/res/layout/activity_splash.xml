<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purpleBT"
    android:backgroundTint="#CEFBC9"
    android:gravity="center"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/rogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="@drawable/ic_greens">

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rogo"
        android:layout_centerInParent="true"
        android:paddingVertical="10dp"
        android:paddingHorizontal="5dp"
        android:shadowColor="@color/greenTxt"
        android:shadowDx="4.0"
        android:shadowRadius="3.0"
        android:text="SOOJOOB"
        android:textColor="@color/green"
        android:textSize="46sp"
        android:textStyle="bold" />
</RelativeLayout>