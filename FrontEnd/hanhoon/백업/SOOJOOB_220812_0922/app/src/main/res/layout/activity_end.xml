<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/trashCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="쓰레기 개수 : "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_pre"
        app:layout_constraintVertical_bias="0.431"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="29dp">
    </TextView>

    <TextView
        android:id="@+id/TimeRecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="총 시간 : "
        app:layout_constraintBottom_toTopOf="@+id/trashCount"
        app:layout_constraintTop_toBottomOf="@+id/imageSaveBtn"
        app:layout_constraintVertical_bias="0.431"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="29dp"></TextView>

    <TextView
        android:id="@+id/sumDistance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이동거리 : "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/now"
        app:layout_constraintVertical_bias="0.431"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="29dp">
    </TextView>


    <Button
        android:id="@+id/btn_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="카메라"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="180dp" />

    <Button
        android:id="@+id/imageSaveBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이미지 저장"
        app:layout_constraintBottom_toBottomOf="@+id/iv_pre"
        app:layout_constraintVertical_bias="0.496" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="플로깅 데이터 전달"
        app:layout_constraintTop_toBottomOf="@+id/imageSaveBtn"
        app:layout_constraintVertical_bias="0.496" />
    <Button
        android:id="@+id/getButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="플로깅 데이터 get"
        app:layout_constraintTop_toBottomOf="@+id/nextButton"
        app:layout_constraintVertical_bias="0.496" />

    <ImageView
        android:id="@+id/iv_pre"
        android:layout_width="419dp"
        android:layout_height="401dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_camera"
        tools:layout_editor_absoluteX="-4dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="현재 시간 : "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TimeRecord"
        app:layout_constraintVertical_bias="0.431"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="29dp">

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>